#!/bin/bash

set -eux

STAGE="${1-cmake}"

readarray -t FILES <<<"$(git ls-files | sed -e 's,^,c-toxcore/,')"

FILES+=(c-toxcore/.git)

if [ -f .git ]; then
  FILES+=(.git/modules/c-toxcore)
fi

cd ..
tar -c "${FILES[@]}" |
  docker build -f "c-toxcore/other/docker/travis/Dockerfile" \
  -t localbuild/travis -
tar -c "${FILES[@]}" |
  docker build -f "c-toxcore/other/docker/$STAGE/Dockerfile" \
  -t "localbuild/$STAGE" -
